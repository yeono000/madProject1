<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_view"
        android:gravity="top|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="유저 아이디"
    > </TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:showDividers="middle">

        <TableRow android:layout_height="38dp">

            <TextView
                android:id="@+id/cell_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0승/" />

            <TextView
                android:id="@+id/cell_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="플레이 횟수 " />
        </TableRow>

        <TableRow android:layout_height="34dp">

            <TextView
                android:id="@+id/cell_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연속 출첵 일수" />

            <TextView
                android:id="@+id/cell_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   회" />
        </TableRow>

    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="418dp">

        <ImageView
            android:id="@+id/Image"
            android:layout_width="215dp"
            android:layout_height="235dp"
            android:layout_gravity="center"
            android:src="@drawable/bts_1" />

    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Friend" />

</FrameLayout>